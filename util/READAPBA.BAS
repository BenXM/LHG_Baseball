
DIM TM$(27),DY$(7),NG%(18),Q$(25)
DATA SUNDAY,MONDAY,TUESDAY,WEDNESDAY,THURSDAY,FRIDAY,SATURDAY

FOR I=1 TO 7:READ DY$(I):NEXT

DATA "CHICAGO","LOS ANGELES","PHILADELPHIA","CINCINNATI","PITTSBURGH","ATLANTA","ST. LOUIS"
DATA "SAN FRANCISCO","HOUSTON","NEW YORK"

FOR I=1 TO 10:READ TM$(I):NEXT

YR%=93

OPEN "NL1967" FOR INPUT AS #1

10 INPUT #1, DT$,DN$,V$,H$
	GOSUB 500

20 FOR X=1 TO 14
	IF UCASE$(V$)=TM$(X) THEN V$=TM$(X):V%=X:GOTO 30
	NEXT
	PRINT "I CAN'T HANDLE "V$

30 PRINT "VIS="V$,V%

40 FOR X=1 TO 14
	IF UCASE$(H$)=TM$(X) THEN H$=TM$(X):H%=X:GOTO 50
	NEXT
	PRINT "COULD NOT FULLY PROCESS "H$
	PRINT "DO YOU WISH TO CONTINUE"
	' HAVE LOOP TO READ NEXT LINE OR EXIT OUT
	END

50 PRINT "HOM="H$,H%
	PRINT X$
	HR%=19:MIN%=0
	IF DN$="D" THEN HR%=13:MIN%=0
	NG%(15)=HR%*100+MIN%
	'WRITE THE GAME HERE
	GP%=GP%+1:PRINT "TOTAL="GP%
	NG%(8)=3
	YN$(0)="93":YN$(1)="93"
	NG%(0)=V%:NG%(1)=H%:NG%(2)=1:NG%(3)=0
	NG%(4)=0:NG%(5)=0:NG%(6)=2:NG%(7)=0
	NG%(9)=0:NG%(10)=0:NG%(11)=0:NG%(13)=0
	HR%=INT(NG%(15)/100)
	MIN%=NG%(15)-HR%*100
	TM%=HR%*60+MIN%
	NG%(12)=INT(TM%/30-18)
	NG%(14)=4
	NG%(17)=MO%
	NG%(18)=YR%
	NG%(16)=DY%

OPEN "NL-1964.SCD" AS #2 LEN=48
	FOR X=0 TO 18
	FIELD #2,X*2 AS X$,2 AS Q$(X+1),48-2-2*X AS X$
	NEXT
	FIELD #2,38 AS X$,2 AS Q$(22),2 AS Q$(23),3 AS Q$(20),3 AS Q$(21)
	FOR X=0 TO 18:LSET Q$(X+1)=MKI$(NG%(X)):NEXT
	FOR X=0 TO 1:LSET Q$(20+X)=YN$(X):NEXT
	LSET Q$(22)=MKI$(VS%):LSET Q$(23)=MKI$(HS%)
	PUT #2,GP%
CLOSE 2

	GOTO 10
	END

500 X=0
	M$=LEFT$(DT$,2)
	IF RIGHT$(M$,1)="/" THEN M$=LEFT$(DT$,1):X=1
	MO%=VAL(M$)
	YR%=64
	DY%=VAL(MID$(DT$,4-X,2))
	RETURN
